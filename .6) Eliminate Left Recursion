#include <stdio.h>
#include <string.h>
int main() {
    char production[50];
    printf("Enter a production: ");
    scanf("%s", production);
    if (production[0] == production[3]) {
        printf("Left recursion detected.\n");
        char nonTerminal = production[0];
        char modifiedProduction[50];
        int i = 4;
        int j = 0;
        while (production[i] != '\0') {
            if (production[i] == '|') {
                i++;
                modifiedProduction[j++] = '|';
            } else {
                modifiedProduction[j++] = production[i];
            }
            i++;
        }
        modifiedProduction[j++] = nonTerminal;
        modifiedProduction[j++] = '\'';
        modifiedProduction[j++] = '-';
        modifiedProduction[j++] = 'e';
        modifiedProduction[j] = '\0';
        printf("Modified production: %c -> %s\n", nonTerminal, modifiedProduction);
    } else {
        printf("No left recursion detected.\n");
    }
    return 0;
}
